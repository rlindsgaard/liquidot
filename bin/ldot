#!/usr/bin/env ruby

require 'liquidot'
require 'graphviz'


if ARGV.length == 0
  raise "No input file"
end


raw_input = ARGF.read
rendered_graphviz = LiquiDot::format(raw_input)

filename = File.basename(ARGF.filename, '.*') + '.png' 

GraphViz.parse_string(rendered_graphviz).output({:png => nil})
